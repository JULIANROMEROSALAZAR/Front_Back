{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "target": "es5",
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ]
  }, 
  "typeRoots": ["node_modules"],
  "types": ["system"]  
}